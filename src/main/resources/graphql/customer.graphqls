extend type Mutation {
    createCustomer(customer: CustomerInput): Customer
    login(username: String!, password: String): Jwt
}

extend type Query {
    customer(id: ID!): Customer
}

input CustomerInput {
    firstname: String!
    lastname: String!
    username: String!
    password: String!
}

type Customer {
    firstname: String!
    lastname: String!
    username: String!
}

type Jwt {
    token: String!
    customer: Customer
}